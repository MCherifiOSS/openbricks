PKG_NAME=gcc-linaro
case "$TOOLCHAIN_FLAVOR" in
  next)
    PKG_VERSION=4.9-2015.03
    PKG_URL="http://releases.linaro.org/15.03/components/toolchain/gcc-linaro/4.9/gcc-linaro-${PKG_VERSION}.tar.xz"
    GCC_VERSION=4.9.3
    ;;
  *)
    PKG_VERSION=4.8-2014.04
    PKG_URL="http://launchpad.net/gcc-linaro/4.8/${PKG_VERSION}/+download/gcc-linaro-${PKG_VERSION}.tar.xz"
    GCC_VERSION=4.8.3
esac
